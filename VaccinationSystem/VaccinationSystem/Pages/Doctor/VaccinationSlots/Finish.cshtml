@page
@model FinishModel

@{
    ViewData["Title"] = "Finish";
}

<h1>Finish</h1>

<h3>Are you sure you want to finish this visit?</h3>
<div>
    <h4>Visit</h4>
    <hr />
    <form method="post">
    <dl class="row">
        <dt class="col-sm-2">
            Patient
        </dt>
        <dd class="col-sm-10">
            @Model.Visit?.Patient.FirstName @Model.Visit?.Patient.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Visit.Vaccine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Visit.Vaccine.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Visit.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Visit.Status)
        </dd>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <span asp-validation-for="Visit" class="text-danger"></span>
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Visit.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Visit.Date)
        </dd>
    </dl>
        <input type="hidden" asp-for="Visit.Id" />
        <input type="submit" value="Finish" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
