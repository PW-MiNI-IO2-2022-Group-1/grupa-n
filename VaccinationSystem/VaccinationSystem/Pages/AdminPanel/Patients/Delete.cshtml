@page
@model VaccinationSystem.Pages.AdminPanel.Patients.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <table class="table">
        <tr>
            <th>Pesel</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
        <tr>
            <td>
                @Model.Patient.Pesel
            </td>
            <td>
                @Model.Patient.FirstName @Model.Patient.LastName
            </td>
            <td>
                @Model.Patient.Email
            </td>
        </tr>
    </table>
    
    <form method="post">
        <input type="hidden" asp-for="Patient.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp; |
        <a asp-page="../Index" class="px-2">Back to List</a>
    </form>
</div>