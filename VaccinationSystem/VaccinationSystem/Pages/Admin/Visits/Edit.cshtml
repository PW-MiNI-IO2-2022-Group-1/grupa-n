@page
@model VaccinationSystem.Pages.Admin.Visits.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Visit</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Visit.Id" />
            <div class="form-group">
                <label asp-for="Visit.PatientId" class="control-label"></label>
                <select asp-for="Visit.PatientId" class="form-control" asp-items="ViewBag.PatientId">
                    <option> </option>
                </select>
                <span asp-validation-for="Visit.PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.VaccineId" class="control-label"></label>
                <select asp-for="Visit.VaccineId" class="form-control" asp-items="ViewBag.VaccineId">
                    <option> </option>
                </select>
                <span asp-validation-for="Visit.VaccineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.DoctorId" class="control-label"></label>
                <select asp-for="Visit.DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="Visit.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.Status" class="control-label"></label>
                <select asp-for="Visit.Status" class="form-control" asp-items="ViewBag.Statuses"></select>
                <span asp-validation-for="Visit.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.Date" class="control-label"></label>
                <input asp-for="Visit.Date" class="form-control" />
                <span asp-validation-for="Visit.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">Go back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}